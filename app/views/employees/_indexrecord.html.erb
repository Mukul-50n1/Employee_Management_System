<%# end %>
<div class="container"> 
<div class="row">
    <%  @employees.each do |epr|  %>
      <% @de = Designation.find_by_id(epr.designation_id) %>
      <div class="col-md-3"  id="record<%=epr.id%>" > 
        <div class="card" id="mouse<%= epr.id%>" onmouseover="mouseIn(this.id)" onmouseout="mouseOut(this.id)">
        <div id="mouse<%=epr.id%>" >
              
        <% if epr.image.attached? %>
          <%= image_tag  url_for(epr.image) ,:size => "260x180" %>
        <% end %>
        <div class="card-body"  >
          <%= epr.id %>
          <h4 class="card-title"> <%= epr.name %>
               
                 <div style="color:greenyellow;">(<%= @de.desig_name %>)</div></h4><br>
                  <table style="border:solid currentColor;">
                    <tr>
                      <td>Email</td>
                      <td><%= epr.email %></td>
                    </tr>
                    <tr>
                      <td>Mobile</td>
                      <td><%= epr.mobile %></td>
                    </tr>
                    <tr>
                      <td>D.o.B</td>
                      <td><%= epr.dob %></td>
                    </tr>
                    <tr>
                      <td>D.o.J</td>
                      <td><%= epr.doj %></td>
                    <tr>
                    <tr>
                      <td><%= link_to 'address' ,adres_path(epr.id) %> </td>
                      <td><input type='checkbox' value = "<%= epr.id %>" class = 'employee_index'></td>
                      <td><%= link_to 'edit',edit_employee_path(epr.id) %></td>
                    </tr>
                  </table>
                </div></div></div></div>
          

<% end %>
</div> </div>
    
   <div align="center"> <%= paginate @empl %></div>



